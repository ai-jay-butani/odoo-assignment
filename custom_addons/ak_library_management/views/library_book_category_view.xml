<odoo>
    <!--book tags tree view-->
    <record id="library_book_category_view_list" model="ir.ui.view">
            <field name="name">library.book.category.list.view</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">
                <list string="Books Category">
                    <field name="name"/>
                    <field name="tag_ids"/>
                </list>
            </field>
    </record>

    <!--book tags form view-->
    <record id="library_book_category_view_form" model="ir.ui.view">
            <field name="name">library.book.category.form.view</field>
            <field name="model">library.book.category</field>
            <field name="arch" type="xml">
                <form string="Books Category">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- book tags action-->
    <record id="action_library_book_category_list" model="ir.actions.act_window">
       <field name="name">Book Category</field>
       <field name="res_model">library.book.category</field>
       <field name="view_mode">list</field>
       <field name="view_id" ref="library_book_category_view_list"/>
       <field name="help" type="html">
           <p class="o_view_nocontent_smiling_face">
               Generate library Details
           </p>
       </field>
    </record>

    <!--menu-->
    <menuitem id="library_books_category_menu" name="Book Category" parent="library_configuration_menu" action="action_library_book_category_list" sequence="10"/>
</odoo>
