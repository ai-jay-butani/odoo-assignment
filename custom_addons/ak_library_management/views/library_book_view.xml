<odoo>
    <!--book tree view-->
    <record id="library_book_view_list" model="ir.ui.view">
            <field name="name">library.book.list.view</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <list string="Books">
                    <field name="name"/>
                    <field name="author"/>
                    <field name="isbn" />
                    <field name="category_ids"/>
                    <field name="state"/>
                    <field name="tags_ids" widget="many2many_tags"/>
                    <field name="publication_date" />
                    <field name="description" />
                </list>
            </field>
    </record>

    <!--book form view-->
    <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">library.book.form.view</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form string="Books">
                    <header>
                            <field name="state" widget="statusbar" statusbar_visible="available,borrowed"
                               options="{'clickable':'1'}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="author"/>
                                <field name="isbn" />
                                <field name="category_ids"/>
                            </group>
                            <group>
                                <field name="tags_ids" widget="many2many_tags"/>
                                <field name="publication_date" />
                                <field name="state" />
                                <field name="description" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- book action-->
    <record id="action_library_book_list" model="ir.actions.act_window">
       <field name="name">Book</field>
       <field name="res_model">library.book</field>
       <field name="view_mode">list</field>
       <field name="view_id" ref="library_book_view_list"/>
       <field name="help" type="html">
           <p class="o_view_nocontent_smiling_face">
               Generate library Details
           </p>
       </field>
    </record>

    <!-- menu-->
    <menuitem id="menu_library" name="Library" sequence="12"/>
    <menuitem id="library_management_books_menu" name="Library Management" parent="menu_library" sequence="0"/>
    <menuitem id="library_books_menu" name="Books" parent="library_management_books_menu" action="action_library_book_list" sequence="10"/>
</odoo>
