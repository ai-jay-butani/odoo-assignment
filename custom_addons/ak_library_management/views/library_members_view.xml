<odoo>
        <!--members tree view-->
    <record id="library_members_view_list" model="ir.ui.view">
            <field name="name">library.members.list.view</field>
            <field name="model">library.members</field>
            <field name="arch" type="xml">
                <list string="Members" editable="bottom" open_form_view="True">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone" />
                    <field name="membership_date" />
                </list>
            </field>
    </record>

    <!--member form view-->
    <record id="library_members_view_form" model="ir.ui.view">
            <field name="name">library.members.form.view</field>
            <field name="model">library.members</field>
            <field name="arch" type="xml">
                <form string="Members">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="email"/>
                            </group>
                            <group>
                                <field name="phone" />
                                <field name="membership_date" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- members action-->
    <record id="action_library_members_list" model="ir.actions.act_window">
       <field name="name">Members</field>
       <field name="res_model">library.members</field>
       <field name="view_mode">list</field>
       <field name="view_id" ref="library_members_view_list"/>
       <field name="help" type="html">
           <p class="o_view_nocontent_smiling_face">
               Generate library Details
           </p>
       </field>
    </record>

    <!--menu-->
    <menuitem id="library_management_members_menu" name="Members" parent="menu_library" sequence="10"/>
    <menuitem id="library_member_menu" name="Members" parent="library_management_members_menu" action="action_library_members_list" sequence="10"/>
</odoo>
