<odoo>
    <!--book tags tree view-->
    <record id="library_book_tags_view_list" model="ir.ui.view">
            <field name="name">library.book.tags.list.view</field>
            <field name="model">library.book.tags</field>
            <field name="arch" type="xml">
                <list string="Books Tags">
                    <field name="name"/>
                </list>
            </field>
    </record>

    <!--book tags form view-->
    <record id="library_book_tags_view_form" model="ir.ui.view">
            <field name="name">library.book.tags.form.view</field>
            <field name="model">library.book.tags</field>
            <field name="arch" type="xml">
                <form string="Books Tags">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
    </record>

    <!-- book tags action-->
    <record id="action_library_book_tags_list" model="ir.actions.act_window">
       <field name="name">Book Tags</field>
       <field name="res_model">library.book.tags</field>
       <field name="view_mode">list</field>
       <field name="view_id" ref="library_book_tags_view_list"/>
       <field name="help" type="html">
           <p class="o_view_nocontent_smiling_face">
               Generate library Details
           </p>
       </field>
    </record>

    <!--menu-->
    <menuitem id="library_configuration_menu" name="Configuration" parent="menu_library" sequence="0"/>
    <menuitem id="library_books_tags_menu" name="Book Tags" parent="library_configuration_menu" action="action_library_book_tags_list" sequence="10"/>
</odoo>
